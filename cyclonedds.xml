<?xml version="1.0" encoding="UTF-8"?>
<CycloneDDS xmlns="https://cdds.io/config">
  <Domain id="any">
    <!-- Turn off multicast/broadcast -->
    <General>
      <AllowMulticast>false</AllowMulticast>
      <EnableMulticastLoopback>false</EnableMulticastLoopback>
    </General>
    <!-- List peers by Docker DNS names (service names from compose) -->
    <Discovery>
      <Peers>
        <Peer address="gz_sim"/>
        <Peer address="wot_dev"/>
      </Peers>
    </Discovery>
    <!-- Optional: reduce chatter in containers -->
    <Tracing>
      <Verbosity>warning</Verbosity>
    </Tracing>
  </Domain>
</CycloneDDS>
