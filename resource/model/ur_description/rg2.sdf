<?xml version="1.0"?>
<sdf version="1.10">
  <model name="rg2">
    <pose>0 0 0 0 0 0</pose>
    <static>false</static>
    <self_collide>false</self_collide>
    <allow_auto_disable>true</allow_auto_disable>

    <!-- ===================== Links ===================== -->

    <!-- Base plate that mounts to UR10 tool flange -->
    <link name="rg2_base">
      <!-- Approx 0.10 x 0.08 x 0.02 m aluminum block -->
      <inertial>
        <mass>0.6</mass>
        <!-- Box inertia (rough) -->
        <inertia>
          <ixx>0.00032</ixx>
          <iyy>0.00020</iyy>
          <izz>0.00021</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="rg2_base_col">
        <geometry>
          <box><size>0.10 0.08 0.02</size></box>
        </geometry>
        <surface><contact><ode/></contact></surface>
      </collision>
      <visual name="rg2_base_vis">
        <geometry>
          <box><size>0.10 0.08 0.02</size></box>
        </geometry>
        <material>
          <ambient>0.6 0.6 0.6 1</ambient>
          <diffuse>0.6 0.6 0.6 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Left finger body -->
    <link name="finger_left">
      <!-- Finger: 0.12 x 0.02 x 0.02 m (length along X), initial pose offset +Y -->
      <pose>0.06 0.01 0 0 0 0</pose>
      <inertial>
        <mass>0.15</mass>
        <inertia>
          <ixx>0.000025</ixx>
          <iyy>0.000012</iyy>
          <izz>0.000030</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="finger_left_col">
        <geometry>
          <box><size>0.12 0.02 0.02</size></box>
        </geometry>
      </collision>
      <visual name="finger_left_vis">
        <geometry>
          <box><size>0.12 0.02 0.02</size></box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Right finger body -->
    <link name="finger_right">
      <!-- Initial pose offset -Y -->
      <pose>0.06 -0.01 0 0 0 0</pose>
      <inertial>
        <mass>0.15</mass>
        <inertia>
          <ixx>0.000025</ixx>
          <iyy>0.000012</iyy>
          <izz>0.000030</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="finger_right_col">
        <geometry>
          <box><size>0.12 0.02 0.02</size></box>
        </geometry>
      </collision>
      <visual name="finger_right_vis">
        <geometry>
          <box><size>0.12 0.02 0.02</size></box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ===================== Joints ===================== -->

    <!-- Left finger prismatic joint: slides along +Y (open increases -> finger moves outwards) -->
    <joint name="finger_left_joint" type="prismatic">
      <parent>rg2_base</parent>
      <child>finger_left</child>
      <pose>0.05 0 0 0 0 0</pose> <!-- joint origin near base front -->
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <!-- 0.00 = fully closed, 0.04 = finger left out by 4 cm -->
          <lower>0.0</lower>
          <upper>0.04</upper>
          <effort>200</effort>
          <velocity>1.0</velocity>
        </limit>
        <dynamics>
          <damping>2.0</damping>
          <friction>0.2</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- Right finger prismatic joint: slides along -Y (open increases magnitude) -->
    <joint name="finger_right_joint" type="prismatic">
      <parent>rg2_base</parent>
      <child>finger_right</child>
      <pose>0.05 0 0 0 0 0</pose>
      <axis>
        <xyz>0 -1 0</xyz>
        <limit>
          <lower>0.0</lower>
          <upper>0.04</upper>
          <effort>200</effort>
          <velocity>1.0</velocity>
        </limit>
        <dynamics>
          <damping>2.0</damping>
          <friction>0.2</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- ===================== Controllers ===================== -->

    <!-- Command left finger position: /model/rg2/joint/finger_left_joint/0/cmd_pos -->
    <plugin name="gz::sim::systems::JointPositionController" filename="gz-sim-joint-position-controller-system">
      <joint_name>finger_left_joint</joint_name>
      <p_gain>300.0</p_gain>
      <d_gain>8.0</d_gain>
    </plugin>

    <!-- Command right finger position: /model/rg2/joint/finger_right_joint/0/cmd_pos -->
    <plugin name="gz::sim::systems::JointPositionController" filename="gz-sim-joint-position-controller-system">
      <joint_name>finger_right_joint</joint_name>
      <p_gain>300.0</p_gain>
      <d_gain>8.0</d_gain>
    </plugin>

    <!-- Optional: publish joint states -->
    <!--
    <plugin name="joint_state_publisher" filename="gz-sim-joint-state-publisher-system">
      <publish_frequency>100.0</publish_frequency>
    </plugin>
    -->

  </model>
</sdf>
