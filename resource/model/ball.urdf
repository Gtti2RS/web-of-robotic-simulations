<?xml version="1.0"?>
<robot name="red_sphere">

  <!-- Base link -->
  <link name="base_link">
    <!-- Visual: red sphere -->
    <visual>
      <geometry>
        <sphere radius="0.1"/> <!-- radius = 0.1 m (10 cm) -->
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/> <!-- RGBA = red, fully opaque -->
      </material>
    </visual>

    <!-- Collision (same shape as visual) -->
    <collision>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
    </collision>

    <!-- Inertial properties -->
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/> <!-- 100 g -->
      <inertia ixx="0.0002" iyy="0.0002" izz="0.0002"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

</robot>
