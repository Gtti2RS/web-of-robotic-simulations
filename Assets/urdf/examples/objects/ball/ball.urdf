<?xml version="1.0"?>
<robot name="red_sphere">

  <!-- Base link -->
  <link name="base_link">
    <!-- Visual: red sphere -->
    <visual>
      <geometry>
        <sphere radius="0.015"/> <!-- radius = 1.5cm -->
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/> <!-- RGBA = red, fully opaque -->
      </material>
    </visual>

    <!-- Collision (same shape as visual) -->
    <collision>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
    </collision>

    <!-- Inertial properties -->
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.01"/> <!-- 100 g -->
      <inertia ixx="0.0002" iyy="0.0002" izz="0.0002"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- Gazebo tuning -->
  <gazebo reference="base_link">
    <selfCollide>false</selfCollide>
    <mu1>0.8</mu1>
    <mu2>0.8</mu2>
    <kp>100000</kp>
    <kd>5.0</kd>
    <maxVel>0.2</maxVel>
    <minDepth>0.001</minDepth>
  </gazebo>

</robot>
