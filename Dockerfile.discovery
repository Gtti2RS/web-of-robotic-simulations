# Small image that provides the Fast DDS discovery server binary
FROM ubuntu:24.04

RUN apt-get update && apt-get install -y --no-install-recommends \
      fastdds-tools ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Expose the default discovery port (for clarity; not strictly required on bridge net)
EXPOSE 11811/udp
CMD ["fastdds", "discovery", "-i", "0.0.0.0", "-p", "11811", "-l", "2"]
