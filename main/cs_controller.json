{
  "@context": "https://www.w3.org/2022/wot/td/v1.1",
  "id": "urn:coppeliasim:simulation:server",
  "title": "cs_controller",
  "description": "A WoT server for controlling CoppeliaSim simulation",
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "security": ["nosec_sc"],
  "properties": {
    "sim_stats": {
      "type": "string",
      "description": "Current simulation state (stop, paused, running)",
      "readOnly": true
    },
    "availableResources": {
      "description": "Lists all available files in resource, upload, and saved folders",
      "readOnly": true,
      "type": "object",
      "properties": {
        "resource": {
          "type": "object",
          "properties": {
            "model": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "world": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "launch": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "upload": {
          "type": "object",
          "properties": {
            "model": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "world": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "launch": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "saved": {
          "type": "object",
          "properties": {
            "model": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "world": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "launch": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "models": {
      "type": "object",
      "readOnly": true,
      "observable": false,
      "description": "Available models from CoppeliaSim scene",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the data was retrieved"
        },
        "models": {
          "type": "array",
          "description": "Array of available models",
          "items": {
            "type": "object",
            "properties": {
              "name": { 
                "type": "string",
                "description": "Model name"
              },
              "handle": { 
                "type": "integer",
                "description": "Model handle (CoppeliaSim object handle)"
              }
            }
          }
        },
        "total_count": {
          "type": "integer",
          "description": "Total number of available models"
        }
      }
    }
  },
  "actions": {
    "startSimulation": {
      "description": "Start the simulation",
      "output": {
        "type": "string",
        "description": "Result of the operation"
      }
    },
    "pauseSimulation": {
      "description": "Pause the simulation",
      "output": {
        "type": "string",
        "description": "Result of the operation"
      }
    },
    "stopSimulation": {
      "description": "Stop the simulation",
      "output": {
        "type": "string",
        "description": "Result of the operation"
      }
    },
    "loadScene": {
      "description": "Load a scene file",
      "input": {
        "type": "string",
        "description": "Filename of the scene file (will be resolved from resource/upload/saved folders)"
      },
      "output": {
        "type": "string",
        "description": "Result of the operation"
      }
    },
    "saveScene": {
      "description": "Save the current scene to a file",
      "input": {
        "type": "string",
        "description": "Filename to save the scene as"
      },
      "output": {
        "type": "string",
        "description": "Result of the operation"
      }
    },
    "closeScene": {
      "description": "Close the current scene",
      "output": {
        "type": "string",
        "description": "Result of the operation"
      }
    },
    "spawn_entity": {
      "title": "Spawn entity",
      "description": "Spawn a new entity from .ttm or .urdf file at a given pose",
      "input": {
        "type": "object",
        "properties": {
          "entity_name": {
            "type": "string",
            "description": "Entity name"
          },
          "file_name": {
            "type": "string",
            "description": "Model file name with extension (.ttm or .urdf)"
          },
          "position": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number",
                "default": 0
              },
              "y": {
                "type": "number",
                "default": 0
              },
              "z": {
                "type": "number",
                "default": 0
              }
            }
          },
          "orientation": {
            "type": "object",
            "properties": {
              "roll": {
                "type": "number",
                "default": 0
              },
              "pitch": {
                "type": "number",
                "default": 0
              },
              "yaw": {
                "type": "number",
                "default": 0
              }
            },
            "description": "Euler angles in degrees"
          }
        },
        "required": [
          "entity_name",
          "file_name"
        ]
      },
      "output": {
        "type": "string",
        "description": "Result of the operation"
      }
    },
    "set_entity_pose": {
      "title": "Set entity pose",
      "description": "Set entity pose to the given location and orientation",
      "input": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Entity ID (handle). If provided, takes precedence over name."
          },
          "name": {
            "type": "string",
            "description": "Entity name"
          },
          "position": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              },
              "z": {
                "type": "number"
              }
            }
          },
          "orientation": {
            "type": "object",
            "properties": {
              "roll": {
                "type": "number",
                "unit": "degree"
              },
              "pitch": {
                "type": "number",
                "unit": "degree"
              },
              "yaw": {
                "type": "number",
                "unit": "degree"
              }
            }
          }
        }
      },
      "output": {
        "type": "string",
        "description": "Result of the operation"
      }
    },
    "remove_entity": {
      "title": "Remove an entity",
      "description": "Remove an entity from the simulation by name. For models, removes the entire hierarchy (root + all children). For individual objects, removes only the specified object.",
      "input": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the entity to remove"
          }
        }
      },
      "output": {
        "type": "string",
        "description": "Result of the operation"
      }
    }
  }
}
