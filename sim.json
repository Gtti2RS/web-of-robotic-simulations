{
  "@context": ["https://www.w3.org/2019/wot/td/v1"],
  "title": "sim-server",
  "description": "Simulation server for launching Gazebo worlds",
  "id": "urn:dev:wot:sim-server",
  "properties": {
      "world_list": {
        "type": "array",
        "items": { "type": "string" },
        "readOnly": true,
        "description": "List of available world files"
      }
    },
  "actions": {
    "launch": {
        "description": "Start simulation with given world file name",
        "input": { "type": "string" }
    },
    "run": {
      "description": "run the simulation",
      "output": { "type": "string" },
      "forms": [
        {
          "href": "http://localhost:8888/sim-server/actions/start",
          "contentType": "application/json"
        }
      ]
    },
    "pause": {
      "description": "Pause the simulation",
      "output": { "type": "string" },
      "forms": [
        {
          "href": "http://localhost:8888/sim-server/actions/pause",
          "contentType": "application/json"
        }
      ]
    },
    "step":{
      "description": "run the simulation with assigned steps",
      "input": {"type": "integer", "minimum": 1}
    },
    "reset": {
      "description": "Reset the simulation",
      "output": { "type": "string" },
      "forms": [
        {
          "href": "http://localhost:8888/sim-server/actions/reset",
          "contentType": "application/json"
        }
      ]
    },
    "spawn": {
      "description": "Spawn a new entity",
      "input": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" }
        },
        "required": ["name", "type"]
      },
      "output": { "type": "string" },
      "forms": [
        {
          "href": "http://localhost:8888/sim-server/actions/spawn",
          "contentType": "application/json"
        }
      ]
    },
    "exit": {
      "description": "Exit current simulation"
    }
  }
}
